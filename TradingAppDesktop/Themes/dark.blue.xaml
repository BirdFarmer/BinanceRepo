<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- dark.blue theme tokens -->
    <SolidColorBrush x:Key="DarkBackground" Color="#0F1724"/>
    <SolidColorBrush x:Key="CardBackground" Color="#1B2430"/>
    <SolidColorBrush x:Key="AccentColor" Color="#3399FF"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#00C48C"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F6C85F"/>
    <SolidColorBrush x:Key="DangerColor" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="White"/>
    <SolidColorBrush x:Key="SecondaryForeground" Color="#AAB4C5"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="#2E3B46"/>

    <!-- Text field overrides per request: white background, black text -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
    <SolidColorBrush x:Key="TextBoxForeground" Color="Black"/>
</ResourceDictionary>