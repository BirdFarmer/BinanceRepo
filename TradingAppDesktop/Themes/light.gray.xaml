<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- light.gray theme tokens (light theme) -->
    <SolidColorBrush x:Key="DarkBackground" Color="#F5F6F8"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentColor" Color="#4C4C9D"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#0F9D58"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
    <SolidColorBrush x:Key="DangerColor" Color="#E11D48"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="#111827"/>
    <SolidColorBrush x:Key="SecondaryForeground" Color="#4B5563"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="#E5E7EB"/>

    <!-- Text field overrides per request: white background, black text -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
    <SolidColorBrush x:Key="TextBoxForeground" Color="Black"/>
</ResourceDictionary>