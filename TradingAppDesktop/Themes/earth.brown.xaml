<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- earth.brown theme tokens -->
    <SolidColorBrush x:Key="DarkBackground" Color="#2E1E18"/>
    <SolidColorBrush x:Key="CardBackground" Color="#3A2C24"/>
    <SolidColorBrush x:Key="AccentColor" Color="#60A5FA"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#22C55E"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F97316"/>
    <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryForeground" Color="#BFA58C"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="#C9B79A"/>

    <!-- Text field overrides per request: white background, black text -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
    <SolidColorBrush x:Key="TextBoxForeground" Color="Black"/>
</ResourceDictionary>