<Window x:Class="TradingAppDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TradingAppDesktop.Controls"
        xmlns:converters="clr-namespace:TradingAppDesktop.Converters"
    Title="Crypto Trading Suite" Width="1200" Height="800"
    MinWidth="900" MinHeight="600"
    FontFamily="Segoe UI" WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Control templates and converters; color tokens moved to App.xaml -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!-- Use default Button template; custom template removed to rely on system rendering -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#837DFF"/>
                </Trigger>
                <!-- Disabled state: grey out button -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3A3A4F"/>
                    <Setter Property="Foreground" Value="#B0B0B0"/>
                    <Setter Property="Opacity" Value="0.65"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox styling is provided application-wide in App.xaml -->

        <!-- DatePicker remains styled but uses app tokens -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource LightBorderBrush}"/>
            <Setter Property="Margin" Value="0 5"/>
            <!-- DatePicker uses default template; custom template removed -->
        </Style>

        <Style x:Key="ParameterSlider" TargetType="Slider">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
        </Style>

        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
        <converters:TradeColorConverter x:Key="TradeColorConverter"/>
        <converters:OperationModeStatusConverter x:Key="OperationModeStatusConverter"/>
        <converters:OperationModeToVisibilityConverter x:Key="OperationModeToVisibilityConverter"/>
        <converters:DecimalSignToBrushConverter x:Key="DecimalSignToBrushConverter"/>

    </Window.Resources>    

    <!-- Main Grid with Dark Theme -->  
    <Grid Background="{DynamicResource DarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource AccentColor}" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="CRYPTO TRADING SUITE" 
                    Foreground="{DynamicResource PrimaryForeground}"
                        FontSize="18" 
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        Margin="8,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <!-- Settings button (top-right) - cog icon using Segoe MDL2 Assets -->
                    <Button x:Name="SettingsButton" Width="36" Height="28" Click="SettingsButton_Click" ToolTip="Settings"
                            Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="{DynamicResource PrimaryForeground}" HorizontalAlignment="Center" VerticalAlignment="Center">&#xE713;</TextBlock>
                    </Button>
                    <!-- PreFlight button moved to footer for easier access -->
                </StackPanel>
            </Grid>
        </Border>

    <!-- Content Area -->
    <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              PanningMode="VerticalFirst">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="295"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

                <!-- Left Panel - Parameters -->
                <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="8"
                    Margin="5">
                <Grid x:Name="ParamsGrid" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- New row for Closed Candle toggle -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="TRADING PARAMETERS" 
                                   Foreground="{DynamicResource AccentColor}"
                                   FontWeight="Bold"
                                   Margin="2 4 0 10"/>
                    </Grid>

                    <!-- Operation Mode -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Operation Mode:"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="OperationModeComboBox" SelectionChanged="OperationMode_SelectionChanged"/>

                    <!-- Strategy Selection (Multi-select) -->
                    <controls:StrategySelectionControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="StrategySelector" Margin="0 5" HorizontalAlignment="Left"/>

                    <!-- Trade Direction -->
                    <Label Grid.Row="3" Grid.Column="0" Content="Trade Direction:"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" x:Name="TradeDirectionComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- TimeFrame -->
                    <Label Grid.Row="4" Grid.Column="0" Content="Time Frame:"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" x:Name="TimeFrameComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Display}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Entry Size -->
                    <Label Grid.Row="5" Grid.Column="0" Content="Entry Size (USDT):"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" x:Name="EntrySizeTextBox" Text="10" TextChanged="ValidateInputs"/>

                    <!-- Leverage -->
                    <Label Grid.Row="6" Grid.Column="0" Content="Leverage:"/>
                    <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" x:Name="LeverageTextBox" Text="10" TextChanged="ValidateInputs"/>

                    <!-- Exit Mode -->
                    <Label Grid.Row="7" Grid.Column="0" Content="Exit Mode:"/>
                    <ComboBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" x:Name="ExitModeComboBox" SelectionChanged="ExitModeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Take Profit" IsSelected="True"/>
                        <ComboBoxItem Content="Trailing Stop"/>
                        <ComboBoxItem Content="PnL% Take Profit"/>
                    </ComboBox>
                    <TextBox Grid.Row="7" Grid.Column="2" x:Name="ExitPnLPctTextBox" Width="70" Text="5" Visibility="Collapsed" ToolTip="Exit PnL% (unlevered). Example: 5" HorizontalAlignment="Left" TextChanged="ExitPnLPctTextBox_TextChanged"/>

                    <!-- Shared Slider: ATR Multiplier or Activation % -->
            <Label Grid.Row="8" Grid.Column="0" x:Name="ExitParamLabel" Content="ATR Multiplier:"/>
            <Slider Grid.Row="8" Grid.Column="1" x:Name="AtrMultiplierSlider" 
                Minimum="0.5" Maximum="10" 
                TickFrequency="0.1"
                Width="180" Margin="0 0 10 0"
                ValueChanged="AtrMultiplier_ValueChanged"/>
            <TextBlock Grid.Row="8" Grid.Column="2" x:Name="AtrMultiplierText" 
                   Text="2.8 (TP: +2.8 ATR)"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource SecondaryForeground}"/>

                    <!-- Callback % (visible only for Trailing Stop) -->
            <Label Grid.Row="9" Grid.Column="0" x:Name="CallbackLabel" Content="Callback %:" Visibility="Collapsed"/>
            <Slider Grid.Row="9" Grid.Column="1" x:Name="CallbackSlider" Minimum="0.1" Maximum="5.0" TickFrequency="0.1" IsSnapToTickEnabled="True"
                Width="180" Margin="0 0 10 0" ValueChanged="CallbackSlider_ValueChanged" Visibility="Collapsed"/>
            <TextBlock Grid.Row="9" Grid.Column="2" x:Name="CallbackText" Text="1.0%" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryForeground}" Visibility="Collapsed"/>

                    <!-- Risk-Reward Ratio -->
            <Label Grid.Row="10" Grid.Column="0" Content="Risk-Reward Ratio:"/>
            <Slider Grid.Row="10" Grid.Column="1" x:Name="RiskRewardSlider" 
                Minimum="0.5" Maximum="10" 
                Value="3.0" TickFrequency="0.1"
                Width="180" Margin="0 0 10 0"
                ValueChanged="RiskReward_ValueChanged"/>
            <TextBlock Grid.Row="10" Grid.Column="2" x:Name="RiskRewardText" 
                   Text="1:3.0"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource SecondaryForeground}"/>

                    <!-- Candle Mode: Forming / Closed / Closed+Aligned -->
                    <StackPanel x:Name="CandleModeLabelPanel" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0 8 0 0">
                        <TextBlock VerticalAlignment="Center" Margin="0 0 8 0" Foreground="{DynamicResource SecondaryForeground}" Text="Candle Mode:"/>
                    </StackPanel>
                    <StackPanel x:Name="CandleModeRadiosPanel" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0 8 0 0">
                        <RadioButton x:Name="CandleModeFormingRadio" GroupName="CandleMode" Content="Forming (real-time)" Margin="0 0 8 0" Checked="CandleModeRadio_Changed" Foreground="{DynamicResource SecondaryForeground}"/>
                        <RadioButton x:Name="CandleModeClosedRadio" GroupName="CandleMode" Content="Closed" Margin="0 0 8 0" Checked="CandleModeRadio_Changed" Foreground="{DynamicResource SecondaryForeground}"/>
                        <RadioButton x:Name="CandleModeAlignedRadio" GroupName="CandleMode" Content="Align" Margin="0 0 8 0" Checked="CandleModeRadio_Changed" Foreground="{DynamicResource SecondaryForeground}"/>
                    </StackPanel>

                    <!-- Backtest Dates Panel -->
                    <StackPanel Grid.Row="13" Grid.ColumnSpan="2" x:Name="BacktestPanel" Visibility="Collapsed" Margin="0 10">
                        <TextBlock Text="Backtest Period" 
                                   Foreground="{StaticResource WarningColor}"
                                   FontStyle="Italic"
                                   Margin="0 0 0 5"/>
                        <StackPanel Grid.Row="14" Orientation="Horizontal">
                            <TextBlock Text="Start:" Width="60" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SecondaryForeground}"/>
                            <TextBox x:Name="StartDateTextBox" Width="120" Margin="0 0 10 0"
                                ToolTip="Leave empty for automatic 1 week before current date"
                                LostFocus="StartDateTextBox_LostFocus"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                        <TextBlock Text="End:" Width="60" VerticalAlignment="Center"
                                                Foreground="{DynamicResource SecondaryForeground}"/>
                            <TextBox x:Name="EndDateTextBox" Width="120"
                                ToolTip="Leave empty for automatic 900 candles after start"
                                LostFocus="EndDateTextBox_LostFocus"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Log -->
                <Border Grid.Column="1" 
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="8"
                    Margin="0 5 5 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Log Header -->
                            <TextBlock Text="TRADING LOG"
                            Foreground="{DynamicResource AccentColor}"
                            FontWeight="Bold"
                            Margin="10,5"/>

                    <!-- Content split: Log on left, Sidebar (Wallet + Recent Trades) on right -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="420"/>
                        </Grid.ColumnDefinitions>

                        <!-- Scrollable Log Area -->
                        <ScrollViewer x:Name="LogScroll" Grid.Column="0"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      PanningMode="VerticalOnly">
                            <TextBox x:Name="LogText" 
                                     IsReadOnly="True"
                                     Background="Transparent"
                                     Foreground="{DynamicResource SecondaryForeground}"
                                     BorderThickness="0"
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas"
                                     FontSize="14"
                                     AcceptsReturn="True"
                                     VerticalAlignment="Stretch"
                                     MinHeight="750"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>

                        <!-- Sidebar: Paper Wallet on top, Recent Trades below -->
                        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
                            <!-- Paper Wallet Card -->
                                <Border x:Name="PaperWalletPanel"
                                    Width="400"
                                    Padding="10"
                                    Background="{DynamicResource CardBackground}"
                                    BorderBrush="#404040"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Visibility="{Binding SelectedItem, ElementName=OperationModeComboBox, Converter={StaticResource OperationModeToVisibilityConverter}}">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Paper Wallet" Foreground="{DynamicResource AccentColor}" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SessionStartText}" Foreground="{DynamicResource SecondaryForeground}" FontSize="11" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Equity, StringFormat=Equity {0:F2} USDT}" Foreground="{DynamicResource PrimaryForeground}" FontSize="14"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding RealizedPnl, StringFormat=Realized {0:+0.00;-0.00;0.00}}" Margin="0,0,10,0">
                                            <TextBlock.Foreground>
                                                <Binding Path="RealizedPnl" Converter="{StaticResource DecimalSignToBrushConverter}"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock Text="{Binding UnrealizedPnl, StringFormat=Unrealized {0:+0.00;-0.00;0.00}}">
                                            <TextBlock.Foreground>
                                                <Binding Path="UnrealizedPnl" Converter="{StaticResource DecimalSignToBrushConverter}"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="{Binding UsedMargin, StringFormat=Used {0:F0}}" Foreground="{DynamicResource SecondaryForeground}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Free, StringFormat=Free {0:F0}}" Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding ActiveTrades, StringFormat=Active {0}}" Foreground="{DynamicResource SecondaryForeground}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Recent Trade Entries Section -->
                            <Expander x:Name="RecentTradesExpander"
                                      ExpandDirection="Down"
                                      IsExpanded="True"
                                      Width="400"
                                      Margin="0,8,0,0"
                                      Background="{DynamicResource CardBackground}"
                                      BorderBrush="#404040"
                                      BorderThickness="2">
                                <Expander.Header>
                                    <Border Background="{DynamicResource CardBackground}" Padding="4" CornerRadius="4,0,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="RECENT TRADE ENTRIES"
                                                       Foreground="{DynamicResource AccentColor}"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                            <Border Grid.Column="1" 
                                                    Margin="10,0,0,0"
                                                    Background="{Binding SelectedItem, ElementName=OperationModeComboBox, Converter={StaticResource OperationModeStatusConverter}, ConverterParameter=brush}"
                                                    CornerRadius="10"
                                                    Padding="8,2">
                                                <TextBlock Text="{Binding SelectedItem, ElementName=OperationModeComboBox, Converter={StaticResource OperationModeStatusConverter}, ConverterParameter=text}"
                                                           Foreground="Black"
                                                           FontWeight="Bold"
                                                           FontSize="11"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Expander.Header>
                                    <Border Background="{DynamicResource CardBackground}" CornerRadius="0,0,0,4">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                  MaxHeight="400"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  PanningMode="VerticalOnly"
                                                  Padding="5"
                                                  Background="{DynamicResource CardBackground}">
                                        <ItemsControl x:Name="RecentTradesList"
                                                              ItemsSource="{Binding RecentTrades}"
                                                              Background="{DynamicResource CardBackground}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayText}"
                                                               FontFamily="Consolas"
                                                               FontSize="10"
                                                               Margin="0,1"
                                                               Background="{DynamicResource CardBackground}">
                                                        <TextBlock.Foreground>
                                                            <Binding Converter="{StaticResource TradeColorConverter}"/>
                                                        </TextBlock.Foreground>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Expander>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        </ScrollViewer>
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackground}" >
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0">
                    <TextBlock x:Name="StatusText" 
                        Foreground="{DynamicResource SecondaryForeground}"
                        FontStyle="Italic"
                        Text="Ready"
                        VerticalAlignment="Center"/>
                    <Border Background="Transparent" Width="12"/>
                    <TextBlock x:Name="SnapshotCoverageText" Text="Snapshot: -/-" Foreground="{DynamicResource SecondaryForeground}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="SnapshotLatencyText" Text="Latency: - ms" Foreground="{DynamicResource SecondaryForeground}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="PreFlightButton" Content="PRE-FLIGHT MARKET CHECK" Click="PreFlightButton_Click" Background="{DynamicResource AccentColor}" Foreground="{DynamicResource PrimaryForeground}"/>
                    <Button x:Name="CoinSelectionButton" Content="MANAGE COINS" Click="CoinSelectionButton_Click" Background="{DynamicResource AccentColor}" Foreground="{DynamicResource PrimaryForeground}"/>
                    <Button x:Name="MultiTesterButton" Content="MULTI TESTER" Click="MultiTesterButton_Click" Background="{DynamicResource AccentColor}" Foreground="{DynamicResource PrimaryForeground}"/>
                    <Button x:Name="TestConnectionButton" Content="TEST CONNECTION" Click="TestConnectionButton_Click" Background="{DynamicResource AccentColor}" Foreground="{DynamicResource PrimaryForeground}"/>
                    <Button x:Name="StartButton" Content="START TRADING" 
                        Background="{StaticResource SuccessColor}" Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="STOP TRADING" 
                        Background="{StaticResource DangerColor}" Click="StopButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>