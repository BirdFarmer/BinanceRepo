<Window x:Class="TradingAppDesktop.Views.PreFlightMarketCheckWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pre-Flight Market Check" Height="900" Width="1200" Background="{DynamicResource DarkBackground}"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Pre-Flight Market Check" Grid.Row="0" Style="{StaticResource CardHeader}"/>

        <!-- Input card -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Padding="12" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Coin 1" Foreground="{DynamicResource SecondaryForeground}"/>
                    <TextBox x:Name="Coin1TextBox" Width="140" Text="BTCUSDT"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Coin 2" Foreground="{DynamicResource SecondaryForeground}"/>
                    <TextBox x:Name="Coin2TextBox" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Coin 3" Foreground="{DynamicResource SecondaryForeground}"/>
                    <TextBox x:Name="Coin3TextBox" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Coin 4" Foreground="{DynamicResource SecondaryForeground}"/>
                    <TextBox x:Name="Coin4TextBox" Width="140" />
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="8,0,12,0">
                    <TextBlock Text="Timeframe" Foreground="{DynamicResource SecondaryForeground}"/>
                    <ComboBox x:Name="TimeFrameComboBox" Width="100">
                        <ComboBoxItem Content="1m"/>
                        <ComboBoxItem Content="5m" IsSelected="True"/>
                        <ComboBoxItem Content="15m"/>
                        <ComboBoxItem Content="30m"/>
                        <ComboBoxItem Content="1h"/>
                        <ComboBoxItem Content="4h"/>
                    </ComboBox>
                </StackPanel>

                <Button x:Name="RunButton" Content="Run Analysis" Width="120" Margin="12,16,0,0" Click="RunButton_Click"/>
                <Button x:Name="CopyAllButton" Content="Copy All" Width="80" Margin="8,16,0,0" Click="CopyAllButton_Click" ToolTip="Copy all visible cards to clipboard" />
                <Button x:Name="InfoButton" Content="â„¹" Width="32" Height="28" Margin="8,16,0,0" ToolTip="Pre-Flight help" Click="InfoButton_Click"/>
                <TextBlock x:Name="ProgressText" Margin="12,20,0,0" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryForeground}"/>
            </StackPanel>
        </Border>

        <!-- Results card -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <!-- Use a 2x2 grid for up to four cards so they appear side-by-side -->
                <UniformGrid x:Name="ResultsPanel" Columns="2" Rows="2" />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
