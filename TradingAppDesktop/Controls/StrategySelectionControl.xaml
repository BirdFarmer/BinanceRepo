<UserControl x:Class="TradingAppDesktop.Controls.StrategySelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TradingAppDesktop.Controls">
    <UserControl.Resources>
        <local:TooltipFormatterConverter x:Key="TooltipFormatter"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource SecondaryForeground}"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="SELECT STRATEGIES (MAX 5)" FontWeight="Bold" Margin="0,0,0,5"/>
        <ItemsControl x:Name="StrategiesContainer">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox 
                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                        IsEnabled="{Binding IsEnabled}"
                        Margin="0,2">
                        <CheckBox.ToolTip>
                            <!-- Bind the ToolTip.DataContext to the CheckBox (PlacementTarget) so inner controls can bind simply -->
                            <ToolTip DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                <StackPanel Width="360">
                                    <TextBlock TextWrapping="Wrap" Text="{Binding ToolTipText, Converter={StaticResource TooltipFormatter}}"/>
                                        <!-- Apply Best Setup button removed: tooltip is informational only to avoid misleading automatic changes -->
                                </StackPanel>
                            </ToolTip>
                        </CheckBox.ToolTip>
                        <!-- Context menu: Apply Best Setup removed â€” tooltips are informational only -->
                        <!-- Ensure label shows strategy name -->
                        <TextBlock Text="{Binding Name}" />
                    </CheckBox>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock x:Name="SelectionCountText" 
                   Text="{Binding SelectedCount, StringFormat='{}{0}/5 strategies selected', 
                   RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </StackPanel>
</UserControl>