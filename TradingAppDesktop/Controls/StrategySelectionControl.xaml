<UserControl x:Class="TradingAppDesktop.Controls.StrategySelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <SolidColorBrush x:Key="TextColor" Color="#69468f"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#888888"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="SELECT STRATEGIES (MAX 5)" FontWeight="Bold" Margin="0,0,0,5"/>
        <ItemsControl x:Name="StrategiesContainer">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox 
                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                        IsEnabled="{Binding IsEnabled}"
                        Margin="0,2"
                        ToolTip="{Binding ToolTipText}"
                        ToolTipService.ShowOnDisabled="True">
                        <CheckBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Apply Best Setup" Click="ApplyBestSetupMenu_Click"
                                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.DataContext}"/>
                            </ContextMenu>
                        </CheckBox.ContextMenu>
                        <!-- Ensure tooltip also shows when hovering the text label -->
                        <TextBlock 
                            Text="{Binding Name}"
                            ToolTip="{Binding ToolTipText}"
                            ToolTipService.ShowOnDisabled="True"/>
                    </CheckBox>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock x:Name="SelectionCountText" 
                   Text="{Binding SelectedCount, StringFormat='{}{0}/5 strategies selected', 
                   RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </StackPanel>
</UserControl>